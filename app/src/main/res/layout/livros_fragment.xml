<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.LivrosFrag">

    <Button
        android:id="@+id/btn_Livros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="110dp"
        android:text="@string/lbl_Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_editora" />

    <EditText
        android:id="@+id/txt_codLivro"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="93dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_codLivro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/lbl_codLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="47dp"
        android:text="Cod Livro"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_codLivro"
        app:layout_constraintEnd_toStartOf="@+id/txt_codLivro"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_Titulo"
        android:layout_width="217dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spinner_catLivro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_Titulo"
        app:layout_constraintTop_toBottomOf="@+id/lbl_NumEd" />

    <EditText
        android:id="@+id/txt_paginas"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lbl_Paginas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Autores"
        app:layout_constraintTop_toTopOf="@+id/lbl_Paginas" />

    <TextView
        android:id="@+id/lbl_Paginas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="Pg"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Autores"
        app:layout_constraintStart_toEndOf="@+id/txt_Autores" />

    <EditText
        android:id="@+id/txt_Autores"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lbl_Key"
        app:layout_constraintEnd_toStartOf="@+id/txt_paginas"
        app:layout_constraintStart_toEndOf="@+id/lbl_Key"
        app:layout_constraintTop_toTopOf="@+id/lbl_Key" />

    <EditText
        android:id="@+id/txt_editora"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_Livros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_Editora" />

    <TextView
        android:id="@+id/lbl_Editora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="52dp"
        android:text="Editora"
        app:layout_constraintBottom_toTopOf="@+id/btn_Livros"
        app:layout_constraintEnd_toStartOf="@+id/txt_editora"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_key"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginEnd="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_autores"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_Key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="15dp"
        android:text="Palavra Chave"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_key"
        app:layout_constraintEnd_toStartOf="@+id/txt_Autores"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_DataPub"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/txt_editora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_DataPub"
        app:layout_constraintTop_toBottomOf="@+id/txt_key" />

    <TextView
        android:id="@+id/lbl_DataPub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="44dp"
        android:text="Data Pub"
        app:layout_constraintBottom_toTopOf="@+id/lbl_Editora"
        app:layout_constraintEnd_toStartOf="@+id/txt_DataPub"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_autores"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_autores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="53dp"
        android:text="Autores"
        app:layout_constraintEnd_toStartOf="@+id/txt_key"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Key" />

    <Spinner
        android:id="@+id/spinner_catLivro"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintBottom_toTopOf="@+id/lbl_catLivro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_catLivro"
        app:layout_constraintTop_toTopOf="@+id/lbl_catLivro" />

    <TextView
        android:id="@+id/lbl_catLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="38dp"
        android:text="@string/txt_CatLivros"
        app:layout_constraintBottom_toTopOf="@+id/lbl_Key"
        app:layout_constraintEnd_toStartOf="@+id/spinner_catLivro"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="67dp"
        android:text="Titulo"
        app:layout_constraintEnd_toStartOf="@+id/txt_Titulo"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_ISBN" />

    <TextView
        android:id="@+id/lbl_ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="149dp"
        android:text="ISBN"
        app:layout_constraintBottom_toTopOf="@+id/lbl_Paginas"
        app:layout_constraintEnd_toStartOf="@+id/txt_ISBN"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_NumEd"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_NumEd"
        app:layout_constraintTop_toBottomOf="@+id/txt_codLivro" />

    <EditText
        android:id="@+id/txt_ISBN"
        android:layout_width="66dp"
        android:layout_height="44dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/lbl_NumEd"
        app:layout_constraintStart_toEndOf="@+id/lbl_ISBN"
        app:layout_constraintTop_toBottomOf="@+id/txt_codLivro" />

    <TextView
        android:id="@+id/lbl_NumEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="12dp"
        android:text="Numero Ed"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_NumEd"
        app:layout_constraintStart_toEndOf="@+id/txt_ISBN"
        app:layout_constraintTop_toBottomOf="@+id/txt_codLivro" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>